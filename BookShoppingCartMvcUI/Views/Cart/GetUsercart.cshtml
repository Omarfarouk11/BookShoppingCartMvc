@model ShoppingCart
@{
    ViewData["Title"] = "GetUsercart";
}


<div style="width:90% ; margin:auto">
    @if (Model != null && Model.Cartdetails != null && Model.Cartdetails.Count > 0)
    {
        <h5>My Cart</h5>
        <table class="table table-striped">
            <tr>
                <th>Book</th>
                <th>Image</th>
                <th>Genre</th>
                <th>Unit Price</th>
                <th>Quantity</th>

            </tr>
            @foreach (var item in Model.Cartdetails)
            {
                <tr>
                    <td>@item.Book.BookName</td>
                    <td><img src="/Images/@item.Book.Image" style="height:100px;width:100px;"/></td>
                    <td>@item.Book.genre.GenreName</td>
                    <td>$@item.UnitPrice</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a class="btn btn-dark" href="/Cart/addItem?bookId=@item.BookId&&redirect=1">+</a>
                        <a class="btn btn-danger" href="/Cart/removeItem?bookId=@item.BookId">-</a>
                    </td>
                </tr>
            }
        </table>
        <div class="d-flex justify-content-between align-items-center   px-2">
        <div class=" text-black">
            <h5>Total Price:  <b>$@Model.Cartdetails.Select(item=>item.UnitPrice*item.Quantity).Sum()</b> </h5>
        </div>
        <div class="my-2">
            <a class="btn btn-outline-danger" href="/Cart/CheckOut">Checkout</a>
            </div>
            </div>

    }
    else
    {
        <h3 class="text-info">No Items Added Yet ...!</h3>
    }


</div>

